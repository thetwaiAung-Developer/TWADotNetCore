@{
    ViewData["Title"] = "User Login";
}
@model AtmCardRequestModel

@section styleSheet{
    <link href="~/css/withdrawl.css" rel="stylesheet" asp-append-version="true" />
}

<div class="col-md-7 d-flex align-items-center p-0 ">
    <div class="card p-2 mb-3 align-items-center w-100 border border-dark-subtle border-5">
        <div class="mb-3">
            <h3 class="text-uppercase" style="color: rgb(50, 40, 66);">Input Your Pin Number</h3>
        </div>
        <div style="width: 30rem;">
            <div>
                <table>
                    <tr class="d-flex justify-content-between mb-2" style="width: 30rem;">
                        <td class="w-100">
                            <div class="card p-2 bg-light align-items-center">
                                <div class="row w-100">
                                    <div class="col d-flex justify-content-center">
                                        <h4 class="text-uppercase"><span class="fw-lighter">Name</span></h4>
                                    </div>
                                    <div class="col">
                                        <h4>@Model.Name</h4>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>

            <div class="w-100 justify-content-center d-flex mb-3">
                <input id="inputNo" style="font-size: 30px;text-align: center;"
                       class="form-control bg-light border border-3 p-0" type="password" readonly>
            </div>
            <div class="w-100">
                <table>
                    <tr class="d-flex justify-content-between mb-2" style="width: 30rem;">
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn1"
                               class="btn btn-lg no-btn w-100" onclick="noClick(1)">1</a>
                        </td>
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn2"
                               class="btn btn-lg no-btn w-100" onclick="noClick(2)">2</a>
                        </td>
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn3"
                               class="btn btn-lg no-btn w-100" onclick="noClick(3)">3</a>
                        </td>
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn1"
                               class="btn btn-lg no-btn w-100" onclick="noClick(4)">4</a>
                        </td>
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn2"
                               class="btn btn-lg no-btn w-100" onclick="noClick(5)">5</a>
                        </td>
                        <td style="width: 7rem;height:4rem;">
                            <button id="userLoginBtn" class="text-uppercase btn btn-lg w-100 h-75 btn-withdrawl"
                                    style="font-size: 15px;">
                                Confirm
                            </button>
                        </td>
                    </tr>
                    <tr class="d-flex justify-content-between mb-2" style="width: 30rem;">
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn1"
                               class="btn btn-lg no-btn w-100" onclick="noClick(6)">6</a>
                        </td>
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn2"
                               class="btn btn-lg no-btn w-100" onclick="noClick(7)">7</a>
                        </td>
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn3"
                               class="btn btn-lg no-btn w-100" onclick="noClick(8)">8</a>
                        </td>
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn1"
                               class="btn btn-lg no-btn w-100" onclick="noClick(9)">9</a>
                        </td>
                        <td style="width: 4rem;height:4rem;">
                            <a id="btn2"
                               class="btn btn-lg no-btn w-100" onclick="noClick(0)">0</a>
                        </td>
                        <td style="width: 7rem;height:4rem;">
                            <button class="text-uppercase btn btn-lg w-100 h-75 btn-secondary"
                                    style="font-size: 15px;" onclick="clearNo()">
                                clear
                            </button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="mt-3 w-25">
            <button class="text-uppercase btn btn-lg w-100 h-75 btn-danger"
                    style="font-size: 15px;">
                cancel
            </button>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var userId = @Html.Raw(JsonConvert.SerializeObject(Model.UserId));
    </script>
    <script src="~/js/atmLogin.js" asp-append-version="true"></script>
}
